{
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces": {
            "default": "align_single_space_minimal"
        },
        "concat_space": {
            "spacing": "one"
        },
        "new_with_parentheses": {
            "anonymous_class": true,
            "named_class": false
        }
    }
}